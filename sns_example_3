fig, ax = plt.subplots()

ax.plot(x, y, 'k')
ax.grid()
ax.margins(0) # remove default margins (matplotlib verision 2+)

ax.axhspan(0, 25, facecolor='green', alpha=0.5)
ax.axhspan(25, 150, facecolor='yellow', alpha=0.5)
ax.axhspan(150, 1500, facecolor='red', alpha=0.5)



